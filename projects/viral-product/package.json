{
  "name": "webhook-lens",
  "version": "0.1.0",
  "description": "Visual API/Webhook debugging tool",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:react\"",
    "dev:electron": "tsc && electron .",
    "dev:react": "vite",
    "build": "tsc && vite build",
    "build:electron": "npm run build && electron-builder",
    "start": "electron .",
    "test": "jest"
  },
  "keywords": [
    "webhook",
    "debugging",
    "api",
    "developer-tools"
  ],
  "author": "Kex <bigmemkex@proton.me>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "lucide-react": "^0.400.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.0",
    "uuid": "^9.0.0",
    "ws": "^8.14.0",
    "zustand": "^4.4.0"
  },
  "build": {
    "appId": "com.webhooklens.app",
    "productName": "WebhookLens",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "build/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
